  </div>
  <div class="form-group ml-3 mr-3">
    <%= form.label :source_url, class: "font-weight-bold" %>
    <%= form.text_field :source_url, class: "form-control" %>
  </div>
  <div class="form-group ml-3 mr-3">
    <%= form.label :data_type, class: "font-weight-bold" %>
    <%= form.text_field :data_type, class: "form-control" %>
  </div>
  <div class="form-group ml-3 mr-3">
    <%= form.label :description, class: "font-weight-bold" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="btn-group ml-3" role="group" aria-label="Pandemic New">
    <%= form.submit class: "btn btn-primary", role: "button" %>
<% end %>
